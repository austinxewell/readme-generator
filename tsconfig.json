{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "*.js"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
